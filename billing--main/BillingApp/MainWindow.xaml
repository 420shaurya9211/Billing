<Window x:Class="BillingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="ðŸ’Ž Jewellery Billing â€” Excel Data Manager"
        Height="850" Width="1250" MinHeight="600" MinWidth="900"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â•â• HEADER â•â•â• -->
        <Border Grid.Row="0" Background="#12122A" Padding="20,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ’Ž" FontSize="28" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="JEWELLERY BILLING" FontSize="20" FontWeight="Bold" 
                                   Foreground="{StaticResource GoldAccentBrush}"/>
                        <TextBlock Text="Excel Data Manager â€” Enter data and it saves directly to Excel"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“‚ Open Excel" Style="{StaticResource SecondaryButton}" 
                            Click="OpenExcel_Click" Margin="0,0,8,0"/>
                    <Button Content="ðŸ”„ Refresh" Style="{StaticResource SecondaryButton}" 
                            Click="Refresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â• TAB CONTROL â•â•â• -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="12,8,12,4"
                    SelectionChanged="Tab_Changed">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#1E1E3A"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="20,8"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="tabBorder" Background="#1E1E3A" CornerRadius="8,8,0,0" 
                                        Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="tabBorder" Property="Background" Value="#28284A"/>
                                        <Setter Property="Foreground" Value="{StaticResource GoldAccentBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="tabBorder" Property="Background" Value="#252545"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- â•â•â• CUSTOMERS TAB â•â•â• -->
            <TabItem Header="ðŸ‘¤  CUSTOMERS">
                <Border Background="#1A1A35" CornerRadius="0,8,8,8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Customer Form -->
                        <Border Grid.Row="0" Background="#20203D" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="ADD NEW CUSTOMER" FontSize="14" FontWeight="Bold"
                                           Foreground="{StaticResource GoldAccentBrush}" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,0">
                                        <Label Content="CUSTOMER NAME *"/>
                                        <TextBox x:Name="CustName" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,8,0">
                                        <Label Content="PHONE *"/>
                                        <TextBox x:Name="CustPhone"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,8,0">
                                        <Label Content="ADDRESS *"/>
                                        <TextBox x:Name="CustAddress"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" Grid.Row="0">
                                        <Label Content="GSTIN"/>
                                        <TextBox x:Name="CustGstin"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" 
                                                Orientation="Horizontal" Margin="0,8,0,0">
                                        <Button Content="âœ… Save Customer to Excel" Style="{StaticResource PrimaryButton}" 
                                                Click="SaveCustomer_Click" Margin="0,0,10,0"/>
                                        <Button Content="ðŸ§¹ Clear" Style="{StaticResource SecondaryButton}" 
                                                Click="ClearCustomer_Click"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Customer Grid -->
                        <DataGrid Grid.Row="1" x:Name="CustomerGrid"/>
                    </Grid>
                </Border>
            </TabItem>

            <!-- â•â•â• INVOICES TAB â•â•â• -->
            <TabItem Header="ðŸ§¾  INVOICES">
                <Border Background="#1A1A35" CornerRadius="0,8,8,8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#20203D" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="CREATE NEW INVOICE" FontSize="14" FontWeight="Bold"
                                           Foreground="{StaticResource GoldAccentBrush}" Margin="0,0,0,10"/>

                                <!-- Customer & Bill info row -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <Label Content="CUSTOMER ID *"/>
                                        <TextBox x:Name="InvCustId"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                        <Label Content="MOBILE NUMBER"/>
                                        <TextBox x:Name="InvPhone"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                        <Label Content="ADDRESS"/>
                                        <TextBox x:Name="InvAddress"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" Margin="0,0,8,0">
                                        <Label Content="BILL TYPE"/>
                                        <ComboBox x:Name="InvBillType" SelectedIndex="0">
                                            <ComboBoxItem Content="PAKKA"/>
                                            <ComboBoxItem Content="KACHA"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="4" Margin="0,0,8,0">
                                        <Label Content="INVOICE DATE"/>
                                        <DatePicker x:Name="InvDate" SelectedDate="{x:Static sys:DateTime.Today}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="5">
                                        <Label Content="DISCOUNT (â‚¹)"/>
                                        <TextBox x:Name="InvDiscount" Text="0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- â”€â”€ ADD ITEM sub-form â”€â”€ -->
                                <Border Background="#1A1A35" CornerRadius="6" Padding="10" Margin="0,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="âž• ADD ITEM" FontSize="11" FontWeight="Bold"
                                                   Foreground="#4FC3F7" Margin="0,0,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                                <Label Content="ITEM DESCRIPTION *"/>
                                                <TextBox x:Name="InvItem"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="0,0,6,0">
                                                <Label Content="METAL"/>
                                                <ComboBox x:Name="InvMetal" SelectedIndex="0">
                                                    <ComboBoxItem Content="GOLD"/>
                                                    <ComboBoxItem Content="SILVER"/>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Margin="0,0,6,0">
                                                <Label Content="PURITY (%) *"/>
                                                <TextBox x:Name="InvPurity" Text="91.6"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="3" Margin="0,0,6,0">
                                                <Label Content="WEIGHT (g) *"/>
                                                <TextBox x:Name="InvWeight"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="4" Margin="0,0,6,0">
                                                <Label Content="RATE/g (â‚¹) *"/>
                                                <TextBox x:Name="InvRate"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="5" Margin="0,0,6,0">
                                                <Label Content="MAKING (â‚¹)"/>
                                                <TextBox x:Name="InvMaking" Text="0"/>
                                            </StackPanel>
                                            <Button Grid.Column="6" Content="âž• Add" Style="{StaticResource PrimaryButton}"
                                                    Click="AddInvoiceItem_Click" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Items DataGrid -->
                                <DataGrid x:Name="InvItemsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                                          MaxHeight="180" Margin="0,0,0,6" IsReadOnly="True"
                                          Background="#1A1A35" RowBackground="#20203D" AlternatingRowBackground="#252548"
                                          Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0"
                                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333360">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Item" Binding="{Binding ItemDescription}" Width="2*"/>
                                        <DataGridTextColumn Header="Metal" Binding="{Binding Metal}" Width="*"/>
                                        <DataGridTextColumn Header="Purity" Binding="{Binding Purity}" Width="*"/>
                                        <DataGridTextColumn Header="Weight(g)" Binding="{Binding Weight, StringFormat=N3}" Width="*"/>
                                        <DataGridTextColumn Header="Rate/g" Binding="{Binding RatePerGram, StringFormat=N0}" Width="*"/>
                                        <DataGridTextColumn Header="Making" Binding="{Binding MakingCharges, StringFormat=N0}" Width="*"/>
                                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=N2}" Width="*"/>
                                        <DataGridTemplateColumn Header="" Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="ðŸ—‘ï¸" Click="RemoveInvoiceItem_Click"
                                                            Background="Transparent" Foreground="Red" BorderThickness="0"
                                                            Cursor="Hand" FontSize="12" Padding="4,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Return Section -->
                                <Border Background="#1A1A35" CornerRadius="6" Padding="12" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,16,0">
                                            <TextBlock Text="â†© RETURN ADJUSTMENT" FontSize="11" FontWeight="Bold"
                                                       Foreground="#FF9800" Margin="0,0,0,6"/>
                                            <RadioButton x:Name="ReturnByWeight" Content="By Weight" 
                                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                                         GroupName="ReturnMode" IsChecked="True" Margin="0,0,0,4"
                                                         Checked="ReturnMode_Changed"/>
                                            <RadioButton x:Name="ReturnByAmount" Content="By Amount" 
                                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                                         GroupName="ReturnMode"
                                                         Checked="ReturnMode_Changed"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                            <Label Content="RETURN WEIGHT (g)"/>
                                            <TextBox x:Name="InvReturnWeight" Text="0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                            <Label Content="RETURN RATE (â‚¹/g)"/>
                                            <TextBox x:Name="InvReturnRate" Text="0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" Margin="0,0,8,0">
                                            <Label Content="RETURN AMOUNT (â‚¹)"/>
                                            <TextBox x:Name="InvReturnAmount" Text="0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="4">
                                            <Label Content="STATUS"/>
                                            <ComboBox x:Name="InvStatus" SelectedIndex="0">
                                                <ComboBoxItem Content="PAID"/>
                                                <ComboBoxItem Content="PENDING"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Buttons & Preview -->
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <Button Content="ðŸ–¨ï¸ Preview &amp; Print" Style="{StaticResource SecondaryButton}" 
                                            Click="PreviewInvoice_Click" Margin="0,0,10,0"/>
                                    <Button Content="ðŸ“‹ Dummy Invoice" Style="{StaticResource SecondaryButton}" 
                                            Click="DummyInvoice_Click" Margin="0,0,10,0"/>
                                    <Button Content="ðŸ’¾ Confirm &amp; Save to Excel" Style="{StaticResource PrimaryButton}" 
                                            Click="SaveInvoice_Click" Margin="0,0,10,0"/>
                                    <Button Content="ðŸ§¹ Clear" Style="{StaticResource SecondaryButton}" 
                                            Click="ClearInvoice_Click" Margin="0,0,20,0"/>
                                    <TextBlock x:Name="InvCalcPreview" Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <DataGrid Grid.Row="1" x:Name="InvoiceGrid"/>
                    </Grid>
                </Border>
            </TabItem>

            <!-- â•â•â• LOANS TAB â•â•â• -->
            <TabItem Header="ðŸ¦  LOANS">
                <Border Background="#1A1A35" CornerRadius="0,8,8,8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#20203D" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="NEW LOAN ENTRY" FontSize="14" FontWeight="Bold"
                                           Foreground="{StaticResource GoldAccentBrush}" Margin="0,0,0,10"/>

                                <!-- Customer info row -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <Label Content="CUSTOMER NAME *"/>
                                        <TextBox x:Name="LoanCustName"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                        <Label Content="PHONE *"/>
                                        <TextBox x:Name="LoanPhone"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                        <Label Content="ADDRESS *"/>
                                        <TextBox x:Name="LoanAddress"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" Margin="0,0,8,0">
                                        <Label Content="ID TYPE *"/>
                                        <ComboBox x:Name="LoanIdType" SelectedIndex="0">
                                            <ComboBoxItem Content="AADHAAR"/>
                                            <ComboBoxItem Content="PAN"/>
                                            <ComboBoxItem Content="DRIVING LICENSE"/>
                                            <ComboBoxItem Content="VOTER ID"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="4">
                                        <Label Content="ID NUMBER *"/>
                                        <TextBox x:Name="LoanGovId"/>
                                    </StackPanel>
                                </Grid>

                                <!-- â”€â”€ ADD ITEM sub-form â”€â”€ -->
                                <Border Background="#1A1A35" CornerRadius="6" Padding="10" Margin="0,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="âž• ADD PLEDGED ITEM" FontSize="11" FontWeight="Bold"
                                                   Foreground="#4FC3F7" Margin="0,0,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                                <Label Content="PRODUCT *"/>
                                                <TextBox x:Name="LoanProduct"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="0,0,6,0">
                                                <Label Content="METAL"/>
                                                <ComboBox x:Name="LoanMetal" SelectedIndex="0">
                                                    <ComboBoxItem Content="GOLD"/>
                                                    <ComboBoxItem Content="SILVER"/>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Margin="0,0,6,0">
                                                <Label Content="PURITY (%) *"/>
                                                <TextBox x:Name="LoanPurity" Text="91.6"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="3" Margin="0,0,6,0">
                                                <Label Content="WEIGHT (g) *"/>
                                                <TextBox x:Name="LoanWeight"/>
                                            </StackPanel>
                                            <Button Grid.Column="4" Content="âž• Add" Style="{StaticResource PrimaryButton}"
                                                    Click="AddLoanItem_Click" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Items DataGrid -->
                                <DataGrid x:Name="LoanItemsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                                          MaxHeight="180" Margin="0,0,0,6" IsReadOnly="True"
                                          Background="#1A1A35" RowBackground="#20203D" AlternatingRowBackground="#252548"
                                          Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0"
                                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333360">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Product" Binding="{Binding ProductDescription}" Width="2*"/>
                                        <DataGridTextColumn Header="Metal" Binding="{Binding MetalType}" Width="*"/>
                                        <DataGridTextColumn Header="Purity" Binding="{Binding Purity}" Width="*"/>
                                        <DataGridTextColumn Header="Weight(g)" Binding="{Binding Weight, StringFormat=N3}" Width="*"/>
                                        <DataGridTemplateColumn Header="" Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="ðŸ—‘ï¸" Click="RemoveLoanItem_Click"
                                                            Background="Transparent" Foreground="Red" BorderThickness="0"
                                                            Cursor="Hand" FontSize="12" Padding="4,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Financial fields row -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <Label Content="PRINCIPAL (â‚¹) *"/>
                                        <TextBox x:Name="LoanPrincipal"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                        <Label Content="INTEREST % (Monthly)"/>
                                        <TextBox x:Name="LoanInterest" Text="1.5"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <Label Content="START DATE *"/>
                                        <DatePicker x:Name="LoanStartDatePicker" SelectedDate="{x:Static sys:DateTime.Today}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Buttons -->
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <Button Content="ðŸ–¨ï¸ Preview &amp; Print Loan" Style="{StaticResource SecondaryButton}" 
                                            Click="PreviewLoanInvoice_Click" Margin="0,0,10,0"/>
                                    <Button Content="ðŸ“‹ Dummy Loan Invoice" Style="{StaticResource SecondaryButton}" 
                                            Click="DummyLoanInvoice_Click" Margin="0,0,10,0"/>
                                    <Button Content="âœ… Save Loan to Excel" Style="{StaticResource PrimaryButton}" 
                                            Click="SaveLoan_Click" Margin="0,0,10,0"/>
                                    <Button Content="ðŸ§¹ Clear" Style="{StaticResource SecondaryButton}" 
                                            Click="ClearLoan_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <DataGrid Grid.Row="1" x:Name="LoanGrid"/>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- â•â•â• STATUS BAR â•â•â• -->
        <Border Grid.Row="2" Background="#12122A" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" Text="Ready â€” Enter data above and click Save"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                <TextBlock x:Name="ExcelPathText" Grid.Column="1" Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="11" VerticalAlignment="Center" Margin="0,0,16,0"/>
                <TextBlock x:Name="RecordCountText" Grid.Column="2" Foreground="{StaticResource GoldAccentBrush}" 
                           FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
